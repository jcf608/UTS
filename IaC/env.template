# Infrastructure as Code - Environment Variables Template
# Copy this file to .env and fill in your credentials
# DO NOT commit .env to version control

# =============================================================================
# AZURE CONFIGURATION
# =============================================================================

# Required: Azure Credentials
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_TENANT_ID=your-tenant-id-here

# Optional: Resource Configuration (defaults provided if not set)
AZURE_RESOURCE_GROUP=rg-rag-system
AZURE_LOCATION=eastus

# Optional: Storage Configuration
AZURE_STORAGE_ACCOUNT=ragstorageXXXX
AZURE_STORAGE_CONTAINER=documents

# Optional: AI Search Configuration
AZURE_SEARCH_SERVICE=rag-search-service

# Optional: OpenAI Configuration
AZURE_OPENAI_SERVICE=rag-openai-service

# Optional: App Service Configuration
AZURE_APP_SERVICE_PLAN=rag-app-plan
AZURE_APP_SERVICE=rag-api-app

